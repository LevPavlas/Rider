<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Constants.xaml" />
    </ResourceDictionary.MergedDictionaries>
     
    <Style x:Key="ImageDisabled" TargetType="Image">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.25"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Image x:Key="OpenImage" x:Shared="false" Height="{StaticResource ToolBarImageHeight}" Width="{StaticResource ToolBarImageWidth}" Source="/Rider.Resource;component/Icons/Open.ico" Style="{StaticResource ImageDisabled}"/>
    <Image x:Key="SaveImage" x:Shared="false" Height="{StaticResource ToolBarImageHeight}" Width="{StaticResource ToolBarImageWidth}" Source="/Rider.Resource;component/Icons/Save.ico" Style="{StaticResource ImageDisabled}"/>
</ResourceDictionary>