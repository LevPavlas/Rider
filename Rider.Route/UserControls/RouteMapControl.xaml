<UserControl x:Class="Rider.Route.UserControls.RouteMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:map="clr-namespace:MapControl;assembly=MapControl.WPF"
             xmlns:local="clr-namespace:Rider.Route.UserControls"
             Loaded="OnLoaded"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <map:Map x:Name="map"                 
                 ManipulationMode="All">
            <map:MapPolyline x:Name="routePath" Stroke="Magenta" StrokeThickness="3" Opacity="0.7" Locations="{Binding RoutePath}" />
        </map:Map>

    </Grid>
</UserControl>
