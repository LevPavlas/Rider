<UserControl x:Class="Rider.Route.UserControls.ElevationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rider.Route.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="OnControlSizeChanged">
    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->
    <Canvas x:Name="canvas"   ClipToBounds="True" MouseMove="OnMouseMove">
        <Canvas.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Azure" Offset="0.0" />
                <!--<GradientStop Color="Red" Offset="0.25" />
                <GradientStop Color="Blue" Offset="0.75" />-->
                <GradientStop Color="LightBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Canvas.Background>

    </Canvas>
</UserControl>
